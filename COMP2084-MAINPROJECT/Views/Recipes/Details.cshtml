@model COMP2084_MAINPROJECT.Models.Recipe

@{
    ViewData["Title"] = "Step-by-Step";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <h4>Follow the Step-by-Step procedure below!</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Process)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Process)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Origin.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Update this Recipe</a> |
    <a asp-action="Index">Back to the Recipe List</a>
</div>
